[*]
root = true
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace=true

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 2

# Groovy
[*.groovy]
indent_style = space
indent_size = 4

# Git interactive
[*.diff]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
